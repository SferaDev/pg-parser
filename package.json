{
  "name": "@pg-nano/pg-parser",
  "type": "module",
  "version": "0.0.0",
  "description": "Node.js addon for PostgreSQL query parsing",
  "license": "MIT",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/pg-nano/pg-parser.git"
  },
  "scripts": {
    "install": "prebuild-install --runtime napi || node-gyp rebuild",
    "rebuild": "node-gyp rebuild",
    "prebuild": "prebuild --runtime napi --target 8 --strip --verbose",
    "upload": "prebuild --runtime napi --upload ${GITHUB_TOKEN}",
    "prepare": "tsc -p .",
    "postinstall": "[ -d .git ] && pnpm -s clangd:init || true",
    "clangd:init": "cd build && compiledb make -f binding.Makefile -n",
    "test": "pnpm dlx vitest@2.0.5",
    "generate:types": "pnpm -s dlx tsx scripts/inferFieldMetadata.ts && pnpm -s dlx tsx scripts/generateTypes.ts",
    "generate:tests": "pnpm -s dlx tsx scripts/generateTests.ts"
  },
  "keywords": [
    "postgres",
    "postgresql",
    "pg",
    "query",
    "parser",
    "plpgsql"
  ],
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^7.0.0",
    "prebuild-install": "^7.1.2"
  },
  "devDependencies": {
    "@types/bindings": "^1.5.5",
    "node-gyp": "^10.0.1",
    "prebuild": "^13.0.1",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=16"
  },
  "binary": {
    "napi_versions": [
      8
    ]
  },
  "config": {
    "runtime": "napi",
    "target": 8
  }
}
